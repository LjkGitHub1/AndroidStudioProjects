<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btn_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="向左"
            style="@style/btn_style"
            />

        <Button
            android:id="@+id/btn_r"
            style="@style/btn_style"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="向右" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_l"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:gravity="left">
        <TextView
            style="@style/text_style_left"
            android:layout_height="wrap_content"
            android:background="#F141A5"
            android:text="1x1=1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/text_style_left"
                android:layout_height="wrap_content"
                android:background="#0D17AB"
                android:text="2x1=2"/>
            <TextView
                style="@style/text_style_left"
                android:layout_height="wrap_content"
                android:background="#F1414D"
                android:text="2x2=4"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/text_style_left"
                android:layout_height="wrap_content"
                android:background="#ABA00D"
                android:text="3x1=3"/>
            <TextView
                style="@style/text_style_left"
                android:layout_height="wrap_content"
                android:background="#E4D611"
                android:text="3x2=6"/>
            <TextView
                style="@style/text_style_left"
                android:layout_height="wrap_content"
                android:background="#F18D41"
                android:text="3x3=9"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/text_style_left"
                android:layout_height="wrap_content"
                android:background="#41F18D"
                android:text="4x1=4"/>
            <TextView
                style="@style/text_style_left"
                android:layout_height="wrap_content"
                android:background="#4DF141"
                android:text="4x2=8"/>
            <TextView
                style="@style/text_style_left"
                android:layout_height="wrap_content"
                android:background="#A5F141"
                android:text="4x3=12"/>
            <TextView
                style="@style/text_style_left"
                android:layout_height="wrap_content"
                android:background="#F1E541"
                android:text="4x4=16"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_r"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:gravity="right">
        <TextView
            style="@style/text_style_right"
            android:layout_height="wrap_content"
            android:background="#F141A5"
            android:text="1x1=1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/text_style_right"
                android:layout_height="wrap_content"
                android:background="#0D17AB"
                android:text="2x1=2"/>
            <TextView
                style="@style/text_style_right"
                android:layout_height="wrap_content"
                android:background="#F1414D"
                android:text="2x2=4"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/text_style_right"
                android:layout_height="wrap_content"
                android:background="#ABA00D"
                android:text="3x1=3"/>
            <TextView
                style="@style/text_style_right"
                android:layout_height="wrap_content"
                android:background="#E4D611"
                android:text="3x2=6"/>
            <TextView
                style="@style/text_style_right"
                android:layout_height="wrap_content"
                android:background="#F18D41"
                android:text="3x3=9"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/text_style_right"
                android:layout_height="wrap_content"
                android:background="#41F18D"
                android:text="4x1=4"/>
            <TextView
                style="@style/text_style_right"
                android:layout_height="wrap_content"
                android:background="#4DF141"
                android:text="4x2=8"/>
            <TextView
                style="@style/text_style_right"
                android:layout_height="wrap_content"
                android:background="#A5F141"
                android:text="4x3=12"/>
            <TextView
                style="@style/text_style_right"
                android:layout_height="wrap_content"
                android:background="#F1E541"
                android:text="4x4=16"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>